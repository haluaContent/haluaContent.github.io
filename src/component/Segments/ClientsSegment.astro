---
import PageHeading from "../PageHeading.astro";
import clientData from "../../data/ClientData";
import CardClient from "../Cards/CardClient.astro"


---
	<div>
		<PageHeading text="Clients"/>
			<div class="clients-div">
		
			{
				clientData.map((item)=>(

				<CardClient name={item.name} imageUrl={item.imageUrl}/>


				))
			}

	

			</div>

	</div>




		
<style>




	* {
		box-sizing: border-box;
	}

	.clients-div {
		display: flex;
		flex-direction: row;
		padding: 20px;
		width: 100%;
		flex-wrap: wrap;
		justify-content: space-between;

	}
</style>