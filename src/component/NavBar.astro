---
import navData from "../data/navData";
import logo from "../images/siteImages/haluaContent.png"
import { Image } from "astro:assets";
---


<nav>

    <div class="logo-container">
       <a href="/"><Image src={logo} class="logo-img" alt="Halua Content Logo"/></a>
    </div>

    <div class="menu-container montserrat-basic">
        {
            navData.map((item)=>(
                <div class="menu-item-div linkOnDark menu-text">
                    <a href={item.path}>{item.name}</a>
                </div>
            ))
        }

    </div>

</nav>


<style>
    .logo-container{
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .logo-img {
       
        width: 100vw;
        height: auto
        object-fit: cover;
        display: block;
    }

   

    .menu-container{
        background-color: rgb(35, 31, 32);
        padding: 20px;
        display: flex;
        justify-content: center;
        font-weight: 500;
    }

    .menu-item-div {
        padding-left: 2vw;
        padding-right: 2vw;
        padding-top: 5px;
        padding-bottom: 5px;
    }
    </style>