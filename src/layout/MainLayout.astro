---

import HeadLayout from "./HeadLayout.astro";
import Footer from "../component/Segments/FooterSegment.astro"
import NavBar from "../component/Segments/NavBar.astro";
import MobileFooterSegment from "../component/Segments/MobileFooterSegment.astro";

const {
	title ,
	description
} = Astro.props;




---

<html lang="en">
	<HeadLayout {title} {description}/>
	<body>
	    <div class="main-container">

		    <div class="nav-container">
				<NavBar client:load/>
			</div>

		    <div class="content-container">
                <main>
			        <slot>
					
					</slot>
		        </main>
		    </div>

		    <div class="footer-container">
				<div class="pc-footer">
					<Footer/>
				</div>

				<div class="mobile-footer">
					<MobileFooterSegment/>
				</div>
			</div>

	    </div>
	</body>
</html>





<style>
	body, html {
  margin: 0;
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
}

.main-container {
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	align-content: space-between;
	width: 100%;
	height: 100%;
}

.nav-container {
	width: 100%;
	flex: 2;
	position: -webkit-sticky;
	position: sticky;
	top:0;
	z-index: 100;
}
.content-container {
	flex: 8;
	width: 100%;
}

div.footer-container {

	
	
}

.pc-footer {

	display: block;

}

.mobile-footer {
	display: none;
}


@media only screen and (max-width: 680px) {

	.mobile-footer {
	display: block;
}

.pc-footer {
	display: none;
}
	
}
</style>