---
import NavBar from "../component/NavBar.astro";
import HeadLayout from "./HeadLayout.astro";
import Footer from "../component/Segments/FooterSegment.astro"

const {
	title ,
	description
} = Astro.props;




---

<html lang="en">
	<HeadLayout {title} {description}/>
	<body>
	    <div class="main-container">

		    <div class="menu-container">
				<NavBar/>
			</div>

		    <div class="content-container">
                <main>
			        <slot>
						content
					</slot>
		        </main>
		    </div>

		    <div class="footer-container"><Footer/></div>

	    </div>
	</body>
</html>





<style>
	body, html {
  margin: 0;
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
}

.main-container {
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	align-content: space-between;
	width: 100%;
	height: 100%;
}

.menu-container {
	width: 100%;
	flex: 2;
	position: -webkit-sticky;
	position: sticky;
	top:0;
	z-index: 100;
}
.content-container {
	flex: 8;
	width: 100%;
	
}

.footer-container {
	background-color:rgb(35, 31, 32);
	color: antiquewhite;
	flex: 2;
}
</style>